<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="com.google.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_near_station_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/spoqahansansneobold"
        android:text="내 위치 근처 충전소"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/radius_8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="가까운 순"
        android:textColor="@color/gray_600"
        android:textSize="14dp"
        app:backgroundTint="@color/gray_050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_near_station_phrase" />

    <Button
        android:id="@+id/btn_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/radius_8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="저렴한 순"
        android:textColor="@color/gray_600"
        android:textSize="14dp"
        app:backgroundTint="@color/gray_050"
        app:layout_constraintStart_toEndOf="@id/btn_distance"
        app:layout_constraintTop_toBottomOf="@id/tv_near_station_phrase" />

    <androidx.recyclerview.widget.RecyclerView
        android:id= "@+id/rv_charger_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_distance"
        tools:listitem="@layout/item_info_purchase"
        />
</androidx.constraintlayout.widget.ConstraintLayout>