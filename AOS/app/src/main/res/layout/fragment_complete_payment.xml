<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.purchase.ReceiveRequestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/icon_x_mono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gray_000"
            app:tint="@color/gray_600"

            />

        <TextView
            android:id="@+id/tv_receive_request_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/complete_payment"
            android:textSize="20dp"
            android:textColor="@color/gray_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_complete_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_complete_payment_phrase"
            android:layout_marginBottom="21dp"
            />
        <TextView
            android:id = "@+id/tv_complete_payment_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_400"
            android:text="8,000원 결제완료!"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/spoqahansansneobold"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@id/ll_reservation_info"
            android:layout_marginBottom="23dp"
            />
        <LinearLayout
            android:id="@+id/ll_reservation_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/radius_8dp"
            android:backgroundTint="@color/gray_050"
            android:orientation="vertical"
            android:paddingHorizontal="26dp"
            android:paddingVertical="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reserve_time_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/reserve_time"
                    android:textColor="@color/gray_400"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_reserve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 - 18:00, 총 6시간"
                    android:layout_marginStart="38dp"
                    android:fontFamily="@font/spoqahansansneomedium"
                    android:textColor="@color/gray_600"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_station_location_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/station_location"
                    android:textColor="@color/gray_400"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_station_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NNN도 NNN군 NN시 123-56"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/spoqahansansneomedium"
                    android:textColor="@color/gray_600"
                    android:textSize="14dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_expected_charge_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/expected_charge"
                    android:textColor="@color/gray_400"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/tv_expected_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2520kwh"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/spoqahansansneomedium"
                    android:textColor="@color/gray_600"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rental_price_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/rental_price"
                    android:textColor="@color/gray_400"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/tv_rental_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,000원"
                    android:layout_marginStart="38dp"
                    android:fontFamily="@font/spoqahansansneomedium"
                    android:textColor="@color/main_400"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_required_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_confirm_station_info"
            android:layout_marginBottom="56dp"
            android:fontFamily="@font/spoqahansansneomedium"
            android:lines="2"
            android:text="@string/required_info"
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_confirm_station_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/radius_8dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingHorizontal="28dp"
            android:paddingVertical="16dp"
            android:text="@string/confirm_use_info"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>