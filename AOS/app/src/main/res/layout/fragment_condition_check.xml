<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sell.ConditionCheckFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/radius_7dp"
            android:backgroundTint="@color/gray_100"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <TextView
            android:id="@+id/tv_condition_check_phrase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/condition_check_phrase1"
            android:textColor="@color/gray_700"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <TextView
            android:id="@+id/tv_condition_check_phrase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:drawableStart="@drawable/icon_question_circle_mono"
            android:drawablePadding="2dp"
            android:drawableTint="@color/gray_300"
            android:text="@string/condition_check_phrase2"
            android:textColor="@color/gray_400"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition_check_phrase1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_condition_check_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneobold"
                android:paddingBottom="14dp"
                android:text="@string/condition_first"
                android:textColor="@color/gray_600"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@id/btn_first_condition_no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_first_condition_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/radius_8dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:paddingVertical="10dp"
                android:text="@string/condition_check_no"
                android:textColor="@color/gray_700"
                app:backgroundTint="@color/gray_050"
                app:layout_constraintEnd_toStartOf="@id/btn_first_condition_yes"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_condition_check_first" />

            <Button
                android:id="@+id/btn_first_condition_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:background="@drawable/radius_8dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:paddingVertical="10dp"
                android:text="@string/condition_check_yes"
                android:textColor="@color/gray_700"
                app:backgroundTint="@color/gray_050"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btn_first_condition_no"
                app:layout_constraintTop_toBottomOf="@id/tv_condition_check_first" />


            <TextView
                android:id="@+id/tv_warning_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/icon_warning_triangle_mono"
                android:drawablePadding="2dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:text="@string/warning_message1"
                android:textColor="@color/error"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_first_condition_yes" />

            <TextView
                android:id="@+id/tv_condition_check_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spoqahansansneobold"
                android:paddingBottom="14dp"
                android:text="@string/condition_second"
                android:textColor="@color/gray_600"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_warning_message1" />


            <Button
                android:id="@+id/btn_second_condition_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:background="@drawable/radius_8dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:paddingVertical="10dp"
                android:text="@string/condition_check_no"
                android:textColor="@color/gray_700"
                app:backgroundTint="@color/gray_050"
                app:layout_constraintEnd_toStartOf="@id/btn_second_condition_yes"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_condition_check_second" />

            <Button
                android:id="@+id/btn_second_condition_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/radius_8dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:paddingVertical="10dp"
                android:text="@string/condition_check_yes"
                android:textColor="@color/gray_700"
                app:backgroundTint="@color/gray_050"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btn_second_condition_no"
                app:layout_constraintTop_toBottomOf="@id/tv_condition_check_second" />


            <TextView
                android:id="@+id/tv_warning_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/icon_warning_triangle_mono"
                android:drawablePadding="2dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:text="@string/warning_message1"
                android:textColor="@color/error"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_second_condition_yes" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/radius_8dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingVertical="18dp"
            android:text="@string/condition_check_next"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>