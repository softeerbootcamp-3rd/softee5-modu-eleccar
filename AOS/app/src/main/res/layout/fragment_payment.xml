<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <TextView
            android:id="@+id/tv_payment_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/payment_phrase"
            android:textColor="@color/gray_700"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <ImageView
            android:id="@+id/iv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/img_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_phrase" />

        <LinearLayout
            android:id="@+id/ll_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_payment">

            <TextView
                android:id="@+id/tv_payment_type_phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/spoqahansansneobold"
                android:text="@string/payment_type"
                android:textColor="@color/gray_700"
                android:textSize="18dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <RadioButton
                    android:id="@+id/btn_carbab_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_payment"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text=" 카밥 페이 사용"
                    android:textColor="@color/gray_700"
                    android:textSize="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_8dp"
                    android:backgroundTint="@color/gray_100"
                    android:padding="18dp">

                    <ImageView
                        android:id="@+id/iv_car_bab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_car_bab"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_car_bab_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:fontFamily="@font/spoqahansansneobold"
                        android:text="카밥 페이"
                        android:textColor="@color/gray_600"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@id/iv_car_bab"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_car_bab_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqahansansneobold"
                        android:text="70,000원"
                        android:textSize="16dp"
                        android:textColor="@color/gray_600"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/car_bab_pay_phrase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수수료 없이 충전하기"
                        android:textColor="@color/gray_600"
                        app:layout_constraintStart_toStartOf="@id/tv_car_bab_pay"
                        app:layout_constraintTop_toBottomOf="@id/tv_car_bab_account" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <RadioButton
                    android:id="@+id/btn_other_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_payment"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:layout_marginTop="20dp"
                    android:text=" 다른 결제 수단"
                    android:textColor="@color/gray_700"
                    android:textSize="16dp" />


            </RadioGroup>

        </LinearLayout>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="178dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D9D9D9"
                android:button="@drawable/shape_fl_btn"
                android:buttonTint="@color/gray_200"
                android:padding="0dp"

                />

        </RadioGroup>


        <Button
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/radius_8dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingVertical="18dp"
            android:text="8,000원 결제하기"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>