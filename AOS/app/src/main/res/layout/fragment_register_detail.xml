<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sell.RegisterDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/radius_7dp"
            android:backgroundTint="@color/gray_100"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header">

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="2"
                android:background="@drawable/radius_7dp"
                android:backgroundTint="@color/main_400" />

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="2" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/btn_next">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_register_detail_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="@string/register_detail_phrase"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="@string/register_detail_title"
                    android:textColor="@color/gray_600"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_register_detail_phrase" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_search_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColorHint="@color/gray_400"
                    app:layout_constraintTop_toBottomOf="@id/tv_title">

                    <EditText
                        android:id="@+id/et_search_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_8dp"
                        android:backgroundTint="@color/gray_050"
                        android:fontFamily="@font/spoqahansansneomedium"
                        android:hint="@string/register_detail_edit_text"
                        android:paddingVertical="13dp"
                        android:textSize="14dp" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tv_charge_location_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="충전 장소"
                    android:textColor="@color/gray_600"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tl_search_addr" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_charge_location_phrase"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="단톡 주택"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="빌라"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="아파트"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="기타"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tv_charge_type_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="충전기 타입"
                    android:textColor="@color/gray_600"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_location" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_charge_type_phrase"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="완속"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="AC 3상"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="데스티네이션"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="기타"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tv_charge_speed_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="충전 속도"
                    android:textColor="@color/gray_600"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_type" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_charge_speed_phrase"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="3kWh"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="5kWh"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="7kWh"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:fontFamily="@font/spoqahansansneoregular"
                        android:text="11kWh"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="기타"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tv_install_type_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="설치 형태"
                    android:textColor="@color/gray_600"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_speed" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_install_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_install_type_phrase"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="실외"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="실내"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="캐노피"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:fontFamily="@font/spoqahansansneoregular"
                        android:text="기타"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/gray_050"
                        app:rippleColor="@color/main_400" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tv_attach_image_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="소개 사진 첨부"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_install_type" />

                <ImageView
                    android:id="@+id/iv_attach_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/radius_8dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_attach_image_phrase" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/radius_8dp"
            android:backgroundTint="@color/main_400"
            android:text="다음"
            app:layout_constraintTop_toBottomOf="@id/scroll_view"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>