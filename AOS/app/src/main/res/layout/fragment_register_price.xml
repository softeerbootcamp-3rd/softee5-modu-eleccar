<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/radius_7dp"
            android:backgroundTint="@color/gray_100"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header">

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="2"
                android:background="@drawable/radius_7dp"
                android:backgroundTint="@color/main_400" />

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="2"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_register_price_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/register_price_phrase"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_register_price_phrase">

            <TextView
                android:id="@+id/watt_unit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:fontFamily="@font/spoqahansansneobold"
                android:text="@string/register_price_unit"
                android:textAlignment="textEnd"
                android:paddingRight="3dp"
                android:paddingTop="6dp"
                android:textSize="18dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_search_addr"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray_200">

                <EditText
                    android:id="@+id/et_search_addr"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_8dp"
                    android:backgroundTint="@color/gray_050"
                    android:fontFamily="@font/spoqahansansneomedium"
                    android:hint="@string/register_price_edit_text"
                    android:layout_marginStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_title">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneobold"
                android:text="@string/register_price_description"
                android:textColor="@color/gray_600"
                android:textAlignment="center"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/price_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/price_input">

            <TextView
                android:id="@+id/price_desc_text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:fontFamily="@font/spoqahansansneobold"
                android:text="시간 당"
                android:textAlignment="textEnd"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_8dp"
                    android:backgroundTint="@color/gray_050"
                    android:padding="5dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:textColor="@color/main_400"
                    android:text="1,540원"
                    android:textAlignment="textStart"
                    android:textSize="18dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/radius_8dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingVertical="18dp"
            android:text="@string/register_location_next"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>