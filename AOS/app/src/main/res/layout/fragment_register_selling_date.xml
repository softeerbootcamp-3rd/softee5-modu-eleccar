<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/radius_7dp"
            android:backgroundTint="@color/gray_100"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header">

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="2"
                android:background="@drawable/radius_7dp"
                android:backgroundTint="@color/main_400" />

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="2"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_register_price_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/register_selling_date_title"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />


        <TextView
            android:id="@+id/tv_register_selling_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="@string/register_selling_date_phrase"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_price_phrase" />

        <LinearLayout
            android:id="@+id/date_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingHorizontal="13dp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_register_selling_date_title">

            <LinearLayout
                android:id="@+id/date_selector"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/date_box">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="월"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="화"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="수"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="목"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="금"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="토"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="일"
                    android:background="@drawable/radius_15dp"
                    android:backgroundTint="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/spoqahansansneobold"
                        android:text="시작 시간"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@id/date_selector"
                        />
                    <EditText
                        android:id="@+id/et_search_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/radius_12dp"
                        android:backgroundTint="@color/gray_050"
                        android:fontFamily="@font/spoqahansansneomedium"
                        android:hint="선택해주세요"
                        android:maxLines="1"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/start_date_text" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textFontWeight="700"
                    android:layout_marginTop="45dp"
                    android:layout_weight="3"
                    android:text="-"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/spoqahansansneobold"
                        android:text="시작 시간"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@id/date_selector"
                        />
                    <EditText
                        android:id="@+id/et_search_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/radius_12dp"
                        android:backgroundTint="@color/gray_050"
                        android:fontFamily="@font/spoqahansansneomedium"
                        android:hint="선택해주세요"
                        android:maxLines="1"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/start_date_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date_box"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/radius_8dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingVertical="18dp"
            android:text="@string/register_location_next"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>